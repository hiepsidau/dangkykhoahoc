<h1>Listing courses</h1>
<% form_tag register_courses_path,:method => :post do |f|%>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Start at date</th>
      <th>Finish at date</th>
      <th>Coach</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= check_box_tag "courses[ids][]",course.id %></td>

        <td><%= course.name %></td>
        <td><%= course.start_at_date %></td>
        <td><%= course.finish_at_date %></td>
        <td><%= course.coach %></td>
        <td><%= link_to 'Show', course %></td>
        <td><%= link_to 'Edit', edit_course_path(course) %></td>
        <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%=submit_tag 'Register'%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Course', new_course_path %>
